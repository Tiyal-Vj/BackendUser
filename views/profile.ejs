<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main min-h-screen w-full bg-zinc-900 p-10 text-white">
      
      <div class="flex justify-end w-full">
        <a href="/logout" class="px-2 py-1 bg-red-600 rounded-md text-sm mb-2 inline-block">Logout</a>
      </div>
      <h1 class="text-3xl ">Hello, <%= user.username %>ðŸ‘‹</h1>
      <h5 class="mb-4">Create your new post</h5>

      <form action="/post" method="post">
        <textarea class="w-1/3 outline-none block resize-none border-2 border-zinc-800 text-sm p-3 rounded-md bg-transparent" placeholder="Kripya Apne Vichar Vyak Kre...." name="content"></textarea>
        <input type="submit" class="px-3 py-2 bg-blue-500 rounded-md mt-3">
      </form>

      <div class="posts mt-20">
        <h3 class="text-zinc-500 font-semibold">Your posts</h3>
        <div class="postcontainer mt-5 flex gap-5 flex-wrap">
          <% user.posts.reverse().forEach(function(post) { %>
            <div class="post w-1/3 mb-4 bg-zinc-800 p-4 border-2 border-zinc-800 rounded-md">
              <h4 class="text-blue-500">@<%= user.username %></h4>
              <p class="text-sm tracking-tight"><%= post.content %></p>
              <small class="mt-3 inline-block"><%= post.likes.length %> likes</small>
              <div class="btns flex gap-8">
                <a class="text-blue-500" href="/like/<%= post._id %>">
                  <%= post.likes.includes(user._id) ? "unlike" : "like" %>
                </a>
                
                <a class="text-zinc-500" href="/edit/<%= post._id %>">Edit</a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
